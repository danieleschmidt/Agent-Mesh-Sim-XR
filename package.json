{
  "name": "agent-mesh-sim-xr",
  "version": "1.0.0",
  "description": "WebXR-based simulator for thousand-agent swarms with VR debugging capabilities",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "start:prod": "npm run build && npm run preview",
    "build:demos": "tsc -p tsconfig.demo.json",
    "benchmark": "npm run build:demos && node dist/demo/benchmark.js",
    "deploy:docker": "docker build -t agent-mesh-sim-xr . && docker run -p 3000:3000 agent-mesh-sim-xr",
    "quality:full": "npm run typecheck && npm run lint && npm run test && npm run build",
    "research:export": "npm run build:demos && node dist/demo/research-validation-demo.js",
    "performance:profile": "node --inspect dist/demo/performance-profile.js"
  },
  "keywords": [
    "webxr",
    "multi-agent",
    "simulation",
    "virtual-reality",
    "debugging",
    "agent-mesh"
  ],
  "author": "Daniel Schmidt",
  "license": "MIT",
  "dependencies": {
    "@types/three": "^0.160.0",
    "cannon-es": "^0.20.0",
    "eventemitter3": "^5.0.1",
    "three": "^0.160.0",
    "uuid": "^9.0.1",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.11.0",
    "@types/uuid": "^9.0.7",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitest/coverage-v8": "^3.2.4",
    "canvas": "^3.1.2",
    "eslint": "^8.56.0",
    "jsdom": "^26.1.0",
    "typescript": "^5.3.3",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/danieleschmidt/Agent-Mesh-Sim-XR.git"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
